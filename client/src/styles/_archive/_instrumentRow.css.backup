/* ==========================================================================
   Instrument Row Stilleri (_instrumentRow.css) - ZENITH V2.5
   ========================================================================== */

.instrument-row {
  position: relative;
  display: flex;
  align-items: center;
  height: 64px;
  transition: all 0.2s ease;
  border-bottom: 1px solid var(--color-border);
  background-color: var(--color-surface-1);
  user-select: none;
  padding-left: var(--spacing-4);
}

/* === GÜÇLENDİRİLMİŞ MUTE STATE === */
.instrument-row--muted {
  opacity: 0.6;
  filter: grayscale(0.8) brightness(0.9);
  background-color: rgba(239, 68, 68, 0.05); /* Hafif kırmızı arkaplan */
  box-shadow: inset 3px 0 0 var(--color-accent-danger); /* Sol kenarda kırmızı çizgi */
  padding-left: calc(var(--spacing-4) - 3px);
}

.instrument-row--muted .instrument-row__icon {
  background-color: var(--color-text-disabled) !important;
}

/* === HOVER & SELECTED STATES === */

.instrument-row:hover:not(.muted) .instrument-row__icon {
  color: var(--color-primary);
}

.instrument-row--selected {
  background-color: rgba(0, 163, 255, 0.1); /* --color-accent-primary'nin saydam hali */
  box-shadow: inset 3px 0 0 var(--color-accent-primary);
  padding-left: calc(var(--spacing-4) - 3px);
}


/* === BİLEŞENLER (BEM Metodolojisi) === */
.instrument-row__info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  min-width: 0;
  cursor: pointer;
}

.instrument-row__icon {
  width: 32px;
  height: 32px;
  border-radius: var(--border-radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  background-color: var(--instrument-color, var(--color-surface-3));
  color: var(--color-text-inverse);
  transition: all 0.2s ease;
}
.instrument-row:hover .instrument-row__icon {
  transform: scale(1.05);
}

.instrument-row__details {
  display: flex;
  flex-direction: column;
  min-width: 0;
}
.instrument-row__name {
  font-weight: 500;
  font-size: var(--font-size-md);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: var(--color-text-primary);
}
.instrument-row__target {
  font-size: var(--font-size-xs);
  font-weight: 500;
  color: var(--color-text-secondary);
}

.instrument-row__controls {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
}

.instrument-row__control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
  transition: transform 0.15s ease;
}

.instrument-row__control-item:hover {
  transform: translateY(-1px);
}

.instrument-row__control-label {
  font-size: 8px;
  font-weight: 800;
  color: var(--color-text-muted);
  text-transform: uppercase;
  letter-spacing: 0.1em;
  user-select: none;
  opacity: 0.7;
  line-height: 1;
  transition: opacity 0.15s ease, color 0.15s ease;
}

.instrument-row__control-item:hover .instrument-row__control-label {
  opacity: 1;
  color: var(--color-accent-primary);
}

.instrument-row__actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  padding-left: var(--spacing-3);
  margin-left: var(--spacing-3);
  border-left: 1px solid var(--color-border);
}

.instrument-row__action-btn {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background-color: transparent;
  border: none;
  color: var(--color-text-secondary);
  transition: all var(--transition-speed);
}

.instrument-row__action-btn:hover {
  background-color: var(--color-surface-3);
  color: var(--color-text-primary);
  transform: scale(1.1);
}

.instrument-row__action-btn--active {
  background-color: var(--color-accent-primary);
  color: var(--color-text-inverse);
  box-shadow: var(--shadow-glow);
}

