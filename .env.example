# Database (Required)
DATABASE_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require
# Alternative: NEON_DATABASE_URL

# Security (Required - MUST be set in production)
JWT_SECRET=change-this-secret-min-32-chars
COOKIE_SECRET=change-this-secret-min-32-chars

# JWT Configuration (Optional)
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Database Pool (Optional)
DB_POOL_MIN=0
DB_POOL_MAX=5

# CORS (Optional - auto-detects Vercel URLs)
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Client URL (Optional - auto-detects from VERCEL_URL)
# CLIENT_URL=https://yourdomain.com

# CDN - Bunny (Required if using Bunny CDN)
BUNNY_API_KEY=your-bunny-api-key-here
BUNNY_STORAGE_API_KEY=your-bunny-storage-api-key-here
BUNNY_PULL_ZONE_URL=https://dawg.b-cdn.net
BUNNY_STORAGE_ZONE_NAME=dawg-storage
BUNNY_STORAGE_ZONE_REGION=de

# CDN Configuration (Optional)
CDN_PROVIDER=bunny
CDN_BASE_URL=https://dawg.b-cdn.net

# Storage (Optional - for MinIO/S3)
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=dawg-audio
STORAGE_REGION=us-east-1
STORAGE_USE_SSL=false

# Redis (Optional)
# REDIS_URL=redis://user:password@host:port

# Rate Limiting (Optional)
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Logging (Optional)
LOG_LEVEL=info

# Server (Not used in Vercel)
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
